<Window x:Class="Skeleton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skeleton"
        mc:Ignorable="d"
        Title="Skeleton" Height="480" Width="1020" Icon="Images/title.ico" Background="LightBlue"
        Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <!--串口选择-->
        <Grid Grid.Row="0" Grid.Column="0">
            <GroupBox x:Name="groupBox" Header="串口选择" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="256" Height="160" BorderBrush="White" BorderThickness="1">
                <DockPanel>
                    <!--电机及控制串口-->
                    <Grid Margin="0,1" DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>
                        <Label x:Name="label" Content="电机及控制串口：" HorizontalAlignment="Left" Margin="13,0,0,0" VerticalAlignment="Top" Grid.Column="0"/>
                        <ComboBox x:Name="Motor_comboBox" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102" Margin="13,3,0,0" SelectedIndex="0" DropDownClosed="Motor_comboBox_DropDownClosed">
                            <ComboBoxItem>请选择串口</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                    <!--压力及倾角串口-->
                    <Grid  Margin="0,1" DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>
                        <Label x:Name="label1" Content="压力及倾角串口：" HorizontalAlignment="Left" Margin="13,0,0,0" VerticalAlignment="Top" Grid.Column="0"/>
                        <ComboBox x:Name="Press_comboBox" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102" Margin="13,3,0,0" SelectedIndex="0" DropDownClosed="Press_comboBox_DropDownClosed">
                            <ComboBoxItem>请选择串口</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                    <!--角度传感器串口-->
                    <Grid Margin="0,1" DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>
                        <Label x:Name="label2" Content="角度传感器串口：" HorizontalAlignment="Left" Margin="13,0,0,0" VerticalAlignment="Top" Grid.Column="0"/>
                        <ComboBox x:Name="Angle_comboBox" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102" Margin="13,3,0,0" SelectedIndex="0" DropDownClosed="Angle_comboBox_DropDownClosed">
                            <ComboBoxItem>请选择串口</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                    <!--当前时间-->
                    <StackPanel Orientation="Vertical" Margin="1">
                        <Label x:Name="label3" Content="当前时间：" HorizontalAlignment="Left" Margin="90,2,0,4" VerticalAlignment="Bottom" Grid.Column="0"/>
                        <TextBox x:Name="Time_textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="22" Margin="56,-5,0,0" VerticalAlignment="Top" Width="130"/>
                    </StackPanel>

                </DockPanel>
            </GroupBox>
        </Grid>
        <!--电机信息与数据采集-->
        <Grid Grid.Row="0" Grid.Column="1">
            <GroupBox x:Name="groupBox1" Header="电机信息与数据采集" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="716" Height="160" BorderBrush="White" BorderThickness="1">
                <DockPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <!--电机1-->
                        <GroupBox x:Name="groupBox2" Header="电机1" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="121" Height="138" BorderBrush="White" BorderThickness="1">
                            <DockPanel>
                                <!--电机1使能-->
                                <Grid Margin="0,1" DockPanel.Dock="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label x:Name="label4" Content="使能：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <TextBox x:Name="Motor1_enable_textBox" IsReadOnly="True" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="0,2,0,0" VerticalAlignment="Top" Width="65"/>
                                </Grid>
                                <!--电机1方向-->
                                <Grid  Margin="0,1" DockPanel.Dock="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label x:Name="label5" Content="方向：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-2"/>
                                    <TextBox x:Name="Motor1_direction_textBox" IsReadOnly="True" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="0,0,0,-2" VerticalAlignment="Top" Width="65"/>
                                </Grid>
                                <!--电机1转速-->
                                <Grid Margin="0,1" DockPanel.Dock="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label x:Name="label6" Content="转速：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <TextBox x:Name="Motor1_speed_textBox" IsReadOnly="True" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="0,2,0,0" VerticalAlignment="Top" Width="65"/>
                                </Grid>
                                <!--电机1电流-->
                                <Grid Margin="0,1" DockPanel.Dock="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label x:Name="label7" Content="电流：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-2,0,0"/>
                                    <TextBox x:Name="Motor1_current_textBox" IsReadOnly="True" Grid.Column="1" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="65"/>
                                </Grid>
                            </DockPanel>
                        </GroupBox>
                        <!--电机2-->
                        <GroupBox x:Name="groupBox3" Grid.Column="1" Header="电机2" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="121" Height="138" BorderBrush="White" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label x:Name="label8" Content="使能：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <TextBox x:Name="Motor2_enable_textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="0,2,0,0" VerticalAlignment="Top" Width="62"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label x:Name="label9" Content="方向：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <TextBox x:Name="Motor2_direction_textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="0,2,0,0" VerticalAlignment="Top" Width="62"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label x:Name="label10" Content="转速：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <TextBox x:Name="Motor2_speed_textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="0,2,0,0" VerticalAlignment="Top" Width="62"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label x:Name="label11" Content="电流：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <TextBox x:Name="Motor2_current_textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="0,2,0,0" VerticalAlignment="Top" Width="62"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <!--电机3-->
                        <GroupBox x:Name="groupBox4" Grid.Column="2" Header="电机3" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="121" Height="138" BorderBrush="White" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label x:Name="label12" Content="使能：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <TextBox x:Name="Motor3_enable_textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="0,2,0,0" VerticalAlignment="Top" Width="62"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label x:Name="label13" Content="方向：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <TextBox x:Name="Motor3_direction_textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="0,2,0,0" VerticalAlignment="Top" Width="62"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label x:Name="label14" Content="转速：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <TextBox x:Name="Motor3_speed_textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="0,2,0,0" VerticalAlignment="Top" Width="62"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label x:Name="label15" Content="电流：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <TextBox x:Name="Motor3_current_textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="0,2,0,0" VerticalAlignment="Top" Width="62"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <!--电机4-->
                        <GroupBox x:Name="groupBox5" Grid.Column="3" Header="电机4" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="121" Height="138" BorderBrush="White" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label x:Name="label16" Content="使能：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <TextBox x:Name="Motor4_enable_textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="0,2,0,0" VerticalAlignment="Top" Width="62"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label x:Name="label17" Content="方向：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <TextBox x:Name="Motor4_direction_textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="0,2,0,0" VerticalAlignment="Top" Width="62"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label x:Name="label18" Content="转速：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <TextBox x:Name="Motor4_speed_textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="0,2,0,0" VerticalAlignment="Top" Width="62"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label x:Name="label19" Content="电流：" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <TextBox x:Name="Motor4_current_textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="0,2,0,0" VerticalAlignment="Top" Width="62"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <!--数据采集-->
                        <GroupBox x:Name="groupBox6" Grid.Column="4" Header="数据采集" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="121" Height="138" BorderBrush="White" BorderThickness="1">
                            <StackPanel Orientation="Vertical" Margin="3">
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="采样率" FontSize="11" Margin="3"/>
                                    <TextBox x:Name="SetTime_textBox" Width="30" Height="16" Text="20"/>
                                    <Label Content="ms" FontSize="11" Margin="3"/>
                                </StackPanel>
                                <Button x:Name="StartPick_button" Content="开始采集" Margin="5" Width="60" Click="StartPick_button_Click"/>
                                <Button x:Name="EndPick_button" Content="结束采集" Margin="5" Width="60" Click="EndPick_button_Click"/>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </DockPanel>
            </GroupBox>
        </Grid>
        <!--电机控制-->
        <Grid Grid.Row="1" Grid.Column="0">
            <GroupBox x:Name="groupBox7" Header="电机控制" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="256" Height="90" BorderBrush="White" BorderThickness="1">
                <StackPanel Orientation="Vertical" Margin="1">
                    <StackPanel Orientation="Horizontal" Margin="0">
                        <Label Content="使能：" FontSize="10"/>
                        <TextBox x:Name="MotorControl_enable_textBox" Width="70" Height="20" Text="0"/>
                        <Label Content="方向：" Margin="10,0,0,0" FontSize="10"/>
                        <TextBox x:Name="MotorControl_direction_textBox" Width="70" Height="20" Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0">
                        <Label Content="转速：" FontSize="10"/>
                        <TextBox x:Name="MotorControl_speed_textBox" Width="70" Height="20" Text="0"/>
                        <Label Content="电机号：" Margin="10,2,0,0" FontSize="7.5"/>
                        <TextBox x:Name="MotorControl_motorNum_textBox" Width="70" Height="20" Text="0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0">
                        <Label Content="已添加电机数：" FontSize="10"/>
                        <TextBox x:Name="MotorControl_chosenCount_textBox" IsReadOnly="True" Height="15" Width="80"/>
                        <Button x:Name="Add_button" Margin="23,0,0,0" Content="添加命令" FontSize="10" Height="15" Width="47" Click="Add_button_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
        <!--压力传感器信息-->
        <Grid Grid.Row="1" Grid.Column="1">
            <GroupBox x:Name="groupBox8" Header="压力传感器信息" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" BorderBrush="White" BorderThickness="1" Height="90" Width="716">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox x:Name="groupBox9" Header="压力传感器1" FontSize="8" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="68" Height="58" BorderBrush="White" BorderThickness="1">
                        <TextBox x:Name="Pressure1_Textbox" IsReadOnly="True" Height="25" Margin="0,6,1,0"  VerticalAlignment="Top" Text="0" FontSize="10"/>
                    </GroupBox>
                    <GroupBox x:Name="groupBox10" Header="压力传感器2" FontSize="8" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="68" Height="58" BorderBrush="White" BorderThickness="1">
                        <TextBox x:Name="Pressure2_Textbox" IsReadOnly="True" Height="25" Margin="0,6,1,0"  VerticalAlignment="Top" Text="0" FontSize="10"/>
                    </GroupBox>
                    <GroupBox x:Name="groupBox11" Header="压力传感器3" FontSize="8" Grid.Column="2" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="68" Height="58" BorderBrush="White" BorderThickness="1">
                        <TextBox x:Name="Pressure3_Textbox" IsReadOnly="True" Height="25" Margin="0,6,1,0"  VerticalAlignment="Top" Text="0" FontSize="10"/>
                    </GroupBox>
                    <GroupBox x:Name="groupBox12" Header="压力传感器4" FontSize="8" Grid.Column="3" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="68" Height="58" BorderBrush="White" BorderThickness="1">
                        <TextBox x:Name="Pressure4_Textbox" IsReadOnly="True" Height="25" Margin="0,6,1,0"  VerticalAlignment="Top" Text="0" FontSize="10"/>
                    </GroupBox>
                    <GroupBox x:Name="groupBox13" Header="压力传感器5" FontSize="8" Grid.Column="4" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="68" Height="58" BorderBrush="White" BorderThickness="1">
                        <TextBox x:Name="Pressure5_Textbox" IsReadOnly="True" Height="25" Margin="0,6,1,0"  VerticalAlignment="Top" Text="0" FontSize="10"/>
                    </GroupBox>
                    <GroupBox x:Name="groupBox14" Header="压力传感器6" FontSize="8" Grid.Column="5" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="68" Height="58" BorderBrush="White" BorderThickness="1">
                        <TextBox x:Name="Pressure6_Textbox" IsReadOnly="True" Height="25" Margin="0,6,1,0"  VerticalAlignment="Top" Text="0" FontSize="10"/>
                    </GroupBox>
                    <GroupBox x:Name="groupBox15" Header="压力传感器7" FontSize="8" Grid.Column="6" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="68" Height="58" BorderBrush="White" BorderThickness="1">
                        <TextBox x:Name="Pressure7_Textbox" IsReadOnly="True" Height="25" Margin="0,6,1,0"  VerticalAlignment="Top" Text="0" FontSize="10"/>
                    </GroupBox>
                    <GroupBox x:Name="groupBox16" Header="压力传感器8" FontSize="8" Grid.Column="7" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="68" Height="58" BorderBrush="White" BorderThickness="1">
                        <TextBox x:Name="Pressure8_Textbox" IsReadOnly="True" Height="25" Margin="0,6,1,0"  VerticalAlignment="Top" Text="0" FontSize="10"/>
                    </GroupBox>
                </Grid>
            </GroupBox>
        </Grid>
        <!--输入信息窗口-->
        <Grid Grid.Row="2" Grid.Column="0">
            <GroupBox x:Name="groupBox17" Header="输入信息窗口" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="256" Height="90" BorderBrush="White" BorderThickness="1">
                <!--AcceptsReturn表示文本框是否接受回车或换行符-->
                <!--MinLines表示设置或获取最小可见的行数-->
                <TextBox x:Name="In_textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="68" Margin="0,0,-2,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" VerticalScrollBarVisibility="Visible" AcceptsReturn="True" MinLines="4"/>
            </GroupBox>
        </Grid>
        <!--角度传感器信息-->
        <Grid Grid.Row="3" Grid.Column="1">
            <GroupBox x:Name="groupBox18" Header="角度传感器信息" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" BorderBrush="White" BorderThickness="1" Width="716" Height="84">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox x:Name="groupBox19" Header="角度传感器1" FontSize="8" Grid.Column="0" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="68" Height="58" BorderBrush="White" BorderThickness="1">
                        <TextBox x:Name="Angle1_Textbox" IsReadOnly="True" Height="25" Margin="0,6,1,0"  VerticalAlignment="Top" Text="0" FontSize="10"/>
                    </GroupBox>
                    <GroupBox x:Name="groupBox20" Header="角度传感器2" FontSize="8" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="68" Height="58" BorderBrush="White" BorderThickness="1">
                        <TextBox x:Name="Angle2_Textbox" IsReadOnly="True" Height="25" Margin="0,6,1,0"  VerticalAlignment="Top" Text="0" FontSize="10"/>
                    </GroupBox>
                    <GroupBox x:Name="groupBox21" Header="角度传感器3" FontSize="8" Grid.Column="2" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="68" Height="58" BorderBrush="White" BorderThickness="1">
                        <TextBox x:Name="Angle3_Textbox" IsReadOnly="True" Height="25" Margin="0,6,1,0"  VerticalAlignment="Top" Text="0" FontSize="10"/>
                    </GroupBox>
                    <GroupBox x:Name="groupBox22" Header="角度传感器4" FontSize="8" Grid.Column="3" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="68" Height="58" BorderBrush="White" BorderThickness="1">
                        <TextBox x:Name="Angle4_Textbox" IsReadOnly="True" Height="25" Margin="0,6,1,0"  VerticalAlignment="Top" Text="0" FontSize="10"/>
                    </GroupBox>
                    <GroupBox x:Name="groupBox23" Header="角度传感器5" FontSize="8" Grid.Column="4" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="68" Height="58" BorderBrush="White" BorderThickness="1">
                        <TextBox x:Name="Angle5_Textbox" IsReadOnly="True" Height="25" Margin="0,6,1,0"  VerticalAlignment="Top" Text="0" FontSize="10"/>
                    </GroupBox>
                    <GroupBox x:Name="groupBox24" Header="角度传感器6" FontSize="8" Grid.Column="5" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="68" Height="58" BorderBrush="White" BorderThickness="1">
                        <TextBox x:Name="Angle6_Textbox" IsReadOnly="True" Height="25" Margin="0,6,1,0"  VerticalAlignment="Top" Text="0" FontSize="10"/>
                    </GroupBox>
                    <Button x:Name="AngleInit_button" Content="角度初始化" Grid.Column="6" HorizontalAlignment="Left" Margin="0,25,0,0" VerticalAlignment="Top" Width="88" Click="AngleInit_button_Click"/>
                    <Button x:Name="Reset_button" Content="重置" Grid.Column="7" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Width="68" Click="Reset_button_Click"/>
                </Grid>
            </GroupBox>
        </Grid>
        <!--输出信息窗口-->
        <Grid Grid.Row="3" Grid.Column="0">
            <GroupBox x:Name="groupBox25" Header="输出信息窗口" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="84" Width="256" BorderBrush="White" BorderThickness="1">
                <StackPanel Orientation="Vertical">
                    <TextBox Name="Out_textBox" Margin="0" VerticalScrollBarVisibility="Visible" Height="45" TextWrapping="Wrap" AcceptsReturn="True"/>
                    <StackPanel Orientation="Horizontal" Margin="0,1,0,0">
                        <Button x:Name="MotorStop_button" Content="电机停止" Margin="40,0,0,0" Width="60" Height="16" FontSize="10" Background="Red" Click="MotorStop_button_Click"/>
                        <Button x:Name="Send_button" Content="发送命令" Margin="40,0,0,0" Width="60" Height="16" FontSize="10" Click="Send_button_Click"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
        <!--倾角传感器信息-->
        <Grid Grid.Row="2" Grid.Column="1">
            <GroupBox x:Name="groupBox26" Header="倾角传感器信息" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="716" Height="90" BorderBrush="White" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox x:Name="groupBox27" Header="倾角传感器1" FontSize="8" Grid.Column="0" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="156" Height="58" BorderBrush="White" BorderThickness="1">
                        <StackPanel Orientation="Horizontal" Margin="0">
                            <StackPanel Orientation="Vertical" Margin="1">
                                <Label Content="x轴" Margin="5,0,0,0"/>
                                <TextBox x:Name="Dip1_x_TextBox" IsReadOnly="True" Text="0" Margin="10,0,0,0" Width="50"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="1">
                                <Label Content="y轴" Margin="5,0,0,0"/>
                                <TextBox x:Name="Dip1_y_TextBox" IsReadOnly="True" Text="0" Margin="10,0,0,0" Width="50"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox x:Name="groupBox28" Header="倾角传感器2" FontSize="8" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="156" Height="58" BorderBrush="White" BorderThickness="1">
